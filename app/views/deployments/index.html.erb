<h1>Listing deployments</h1>

<table>
  <thead>
    <tr>
      <th>Battery</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Job</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deployments.each do |deployment| %>
      <tr>
        <td><%= deployment.battery_id %></td>
        <td><%= deployment.start_date %></td>
        <td><%= deployment.end_date %></td>
        <td><%= deployment.job_id %></td>
        <td><%= deployment.user_id %></td>
        <td><%= link_to 'Show', deployment %></td>
        <td><%= link_to 'Edit', edit_deployment_path(deployment) %></td>
        <td><%= link_to 'Destroy', deployment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deployment', new_deployment_path %>
