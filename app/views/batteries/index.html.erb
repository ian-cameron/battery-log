<h1>Listing batteries</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Dob</th>
      <th>Dod</th>
      <th>Client</th>
      <th>Capacity</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batteries.each do |battery| %>
      <tr>
        <td><%= battery.label %></td>
        <td><%= battery.dob %></td>
        <td><%= battery.dod %></td>
        <td><%= battery.client_id %></td>
        <td><%= battery.capacity %></td>
        <td><%= battery.model %></td>
        <td><%= link_to 'Show', battery %></td>
        <td><%= link_to 'Edit', edit_battery_path(battery) %></td>
        <td><%= link_to 'Destroy', battery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Battery', new_battery_path %>
